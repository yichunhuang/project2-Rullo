<% include header %>
<body>
  <div class="container">
      <% include banner %>
    <div class="row" style="margin-top: 100px;">
      <div class="col-12">
        <hr style="border:dashed;border-color:pink;border-width:2px;">
        <div style="margin:70px 0 0 60px;">
                    <button type='button'  class='btn btn-outline-primary' onclick="myPlan()"
                        style="background:#0066cc;border-color:#0066cc;color:white;padding-top:13px;">
                        <h6 id="user_plan"></h6>
                    </button>

                    <button id="backToHome"
                        style='margin-left:100px;padding-top:5px;border-radius: 3px;border-color:#0066cc;color:#0066cc;'
                        type="submit" onclick="back()">回前頁</button>
                        <button type="submit" style=' margin-left:20px;height:45px;border-radius: 3px;border-color:#ff8080;color:#ff8080;'
                        onclick="insertOtherPlan()">將此計畫加至我的計畫</button>
                    <button type="submit" style=' margin-left:20px;height:45px;border-radius: 3px;border-color:#ff8080;color:#ff8080;'
                        onclick="calendar()">將此計畫匯入Google Calendar</button>
                        <a href="https://www.google.com/calendar" target="_blank"> <button type="submit" style=' margin-left:20px;height:45px;border-radius: 3px;border-color:#ff8080;color:#ff8080;'
                         >Google Calendar</button></a>
                        
                </div>
                <!-- https://semantic-ui.com/collections/message.html  -->
                <div class="ui message" id="myPlan"
                    style="margin-top:30px;padding:10px; border:dotted;  border-radius: 25px; border-color:#99bbff; background-color:#ffe6e6;">
                    <div class="messageplan" style="padding:20px;">
                        <div id="category"></div>
                        <br>
                        <div id="topic"></div>
                        <br>
                        <div id="period"></div>
                        <br>
                        <div id="goal"></div>
                        <br>
                        <div id="rules"></div>
                        <br>

                        <div id="trigger"></div>
                        <br>
                        <div id="punish"></div>
                    </div>
                </div>
                <div style="margin-left:90px;">
                    <div id="each-day"></div>
                </div>
            </div>
            <span id="idtoken"></span>
            <input type="hidden" id="Plan_id" name="plan_id" />
            <input type="hidden" id="Day" name="day" />
            <input type="hidden" id="Rules-length" name="rules-length" />
            <input type="hidden" id="timePerDay" />
        </div>
       </div> 
  </div>
  <% include footer %>
</body>
<script src="<%= script_src %>"></script>
<script src="https://apis.google.com/js/platform.js?onload=renderButton" async defer></script>